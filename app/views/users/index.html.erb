<div id="page-content">
<h1 class="text-center mt-3">Listing of Users</h1>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-4">
             <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            
                        </tr>
                    </thead>
                        <tbody>
                            <% @user.each do |user| %>
                                <tr>
                                    <td>
                                    <% if user_signed_in?  %>
                                        <%= link_to user.username, edit_user_registration_path, class:"text-decoration-none" %></td> 
                                    <% end %></td>
                                    <td><%= user.email %></td>
                                </tr>
                            <% end %>
                        </tbody>
                </table>
            </div>
        </div>
    </div>  
    
</div>   