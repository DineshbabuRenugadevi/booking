<div id="page-content">
    <h1 class="text-center">Edit <%= resource_name.to_s.humanize %></h1>
      <div class="container">
        <div class="row justify-content-center mt-4">
          <div class="col-6">
            <div class= "shadow p-3 bg-info rounded">
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  
                <div class="form-group  ">
                  <%= f.label :username, class: "col-2 col-form-label text-light" %>
                  <div class="col-8">
                      <%= f.text_field :username, autofocus: true , class: "form-control shadow rounded", placeholder: "Enter the username" %> 
                  </div>
                </div>

                <div class="form-group ">
                  <%= f.label :email, class: "col-2 col-form-label text-light" %>
                  <div class="col-8">
                      <%= f.email_field :email, autocomplete: "email" , class: "form-control shadow rounded", placeholder: "Enter the username" %> 
                  </div>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="form-group ">
                <%= f.label :password, class: "col-2 col-form-label text-light" %><i>(leave blank if you don't want to change it)</i><br />
                <div class="col-8">
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow rounded", placeholder: "Enter the password" %>
                </div>
                </div>

                <div class="form-group  ">
                <%= f.label :password_confirmation, class: "col-2 col-form-label text-light" %><br />
                <div class="col-8">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow rounded", placeholder: "Re-Enter the password" %>
                </div>
                </div>


                <div class="form-group ">
                <%= f.label :current_password, class: "col-2 col-form-label text-light" %><i>(we need your current password to confirm your changes)</i><br />
                <div class="col-8">
                  <%= f.password_field :current_password, autocomplete: "new-password", class: "form-control shadow rounded", placeholder: "Enter the password" %>
                </div>
                </div>

                <div class="form-group mt-4 ml-3">
                  <%= f.submit "Update", class: "btn btn-outline-light btn-lg" %>  
                </div>

                <%= link_to "[ Back to User ]", :back, class: "col-2 col-form-label text-light" %>

                <% end %>
              </div>
          </div>
        </div>
    </div>
</div>

  

  