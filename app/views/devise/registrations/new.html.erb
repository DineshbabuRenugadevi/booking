<div id="page-content">
    <h1 class="text-center mt-4">Create New User</h1>
    
      <div class="container">
        <div class="row justify-content-center mt-4">
          <div class="col-6">
            <div class= "shadow p-3 bg-info rounded">
            <%= render "devise/shared/error_messages", resource: resource %>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="form-group row ">
                  <%= f.label :username, class: "col-2 col-form-label text-light" %>
                  <div class="col-8">
                      <%= f.text_field :username, autofocus: true , class: "form-control shadow rounded", placeholder: "Enter the username" %> 
                  </div>
                </div>

                <div class="form-group row">
                  <%= f.label :email, class: "col-2 col-form-label text-light" %>
                  <div class="col-8">
                      <%= f.email_field :email, autocomplete: "email" , class: "form-control shadow rounded", placeholder: "Enter the username" %> 
                  </div>
                </div>

            <div class="form-group row">
                <%= f.label :password, class: "col-2 col-form-label text-light" %><br />
                <div class="col-8">
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow rounded", placeholder: "Enter the password" %>
              </div>
            </div>


            <div class="form-group row ">
                <%= f.label :password_confirmation, class: "col-2 col-form-label text-light" %><br />
                <div class="col-8">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow rounded", placeholder: "Re-Enter the password" %>
              </div>
            </div>

            <div class="form-group row justify-content-center actions">
                  <%= f.submit "Sign Up", class: "btn btn-outline-light btn-lg" %>  
            </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>



  