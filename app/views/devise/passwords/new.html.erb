
<div id="page-content">
    <h1 class="text-center mt-4">Forgot your password?</h1>
    
      <div class="container">
        <div class="row justify-content-center mt-4">
          <div class="col-6">
            <div class= "shadow p-3 bg-info rounded">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group row">
                  <%= f.label :email, class: "col-2 col-form-label text-light" %>
                  <div class="col-8">
                      <%= f.email_field :email,autofocus: true, autocomplete: "email" , class: "form-control shadow rounded", placeholder: "Enter the username" %> 
                  </div>
                </div>

                <div class="form-group row justify-content-center actions">
                  <%= f.submit "Send me reset password instructions", class: "btn btn-outline-light btn-lg" %>  
                </div>
              
                
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

