<div id="page-content">
  <div class="container">
      <div class="row justify-content-center mt-4">
          <div class="col-6">
          <div class= "shadow p-3 bg-info rounded">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group row">
                      <%= f.label :username, class: "col-2 col-form-label text-light" %>
                      <div class="col-8">
                          <%= f.text_field :login, autofocus: true , class: "form-control shadow rounded", placeholder: "Enter the username" %> 
                      </div>
                  </div>

                  <div class="form-group row">
                      <%= f.label :password, class: "col-2 col-form-label text-light" %><br />
                    <div class="col-8">
                      <%= f.password_field :password, autocomplete: "current-password", class: "form-control shadow rounded", placeholder: "Enter the password" %>
                    </div>
                  </div>

                  
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <div class="justify-content-center actions">
                    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "col-2 col-form-label text-light" %><br />
                  <% end %>
                  </div>


                  <div class="form-group row justify-content-center actions">
                  <%= f.submit "Log In", class: "btn btn-outline-light btn-lg" %>  
                  </div>
              <% end %>
              
              </div>
          </div>
      </div> 
  </div>
</div>




