<div id="page-content">
    <h1 class="text-center mt-3">Scheduled Meetings</h1>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-4">
             <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Email</th>
                            <th>Description</th>
                            <th>Meeting Date</th>
                            <th>Meeting Start</th>
                            <th>Meeting End</th>
                            <th>RoomType</th>
                            
                        </tr>
                    </thead>
                        <tbody>
                            <% @meeting.each do |meeting| %>
                                <tr>
                                    <td><%= meeting.name %></td>
                                    <td><%= meeting.role %></td>
                                    <td><%= meeting.email %></td>
                                    <td><%= meeting.description %></td>
                                    <td><%= meeting.date.strftime("%d %b %y") %></td>
                                    <td><%= meeting.start_at.strftime("%I : %M %p") %></td>
                                    <td><%= meeting.end_at.strftime("%I : %M %p") %></td>
                                    <td><%= meeting.roomtype %></td>
                                </tr>
                            <% end %>
                        </tbody>
                </table>
            </div>
        </div>
    </div>  
    
</div>   