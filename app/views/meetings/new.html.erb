<h1>Create a new Meeting</h1>


<%= form_with scope: :meeting, url: meetings_path, local: true do |f| %>

  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>

  <p>
  <%= f.label :role %><br/>
  <%= f.text_field :role %>
</p>

<p>
  <%= f.label :email %><br/>
  <%= f.email_field :email %>
</p>

  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>

  <p>
  <%= f.label :date %><br/>
  <%= f.date_field :date %>
</p>

<p>
  <%= f.label :start_at %><br/>
  <%= f.time_field :start_at %>
</p>

<p>
  <%= f.label :end_at %><br/>
  <%= f.time_field :end_at %>
</p>
<p>
  <%= f.label :roomtype %><br/>
  <%= f.select(:roomtype, options_for_select([['Room1', 'Room1'],['Room2', 'Room2'],['Room3', 'Room3'],['Room4', 'Room4'] ])) %>

</p>

  <p>
    <%= f.submit %>
  </p>
  
<% end %>